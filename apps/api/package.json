{
  "name": "@obelus/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "files": ["dist", "drizzle", "package.json"],
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/apps/api/src/server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/**/*.test.ts",
    "migrate": "node dist/apps/api/src/db/migrate.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:bootstrap": "node ./scripts/db-bootstrap.mjs",
    "dev:worker": "tsx watch src/worker.ts",
    "start:worker": "node dist/apps/api/src/worker.js"
  },
  "dependencies": {
    "@fastify/cookie": "10.0.1",
    "@fastify/cors": "10.0.2",
    "@fastify/multipart": "^9.4.0",
    "@obelus/shared": "workspace:*",
    "@trpc/server": "11.9.0",
    "bullmq": "^5.69.2",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "0.41.0",
    "fastify": "5.7.3",
    "ioredis": "5.4.2",
    "jose": "5.9.6",
    "pg": "8.13.3",
    "superjson": "2.2.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/node": "22.13.4",
    "@types/pg": "8.11.11",
    "drizzle-kit": "0.30.4",
    "tsx": "4.20.3",
    "typescript": "5.9.3"
  }
}
