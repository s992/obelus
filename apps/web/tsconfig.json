{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/app.tsx",
    "src/api/**/*.ts",
    "src/styles/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["src/generated", "src/hooks", "src/pages", "src/providers"]
}
