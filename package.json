{
  "name": "obelus",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.29.1",
  "scripts": {
    "dev": "pnpm --filter @obelus/api dev & pnpm --filter @obelus/web dev",
    "dev:api": "pnpm --filter @obelus/api dev",
    "dev:web": "pnpm --filter @obelus/web dev",
    "db:bootstrap": "pnpm --filter @obelus/api db:bootstrap",
    "build": "pnpm --filter @obelus/shared build && pnpm --filter @obelus/api build && pnpm --filter @obelus/web build",
    "typecheck": "pnpm -r typecheck",
    "lint": "oxlint . && biome check .",
    "release": "bash ./scripts/release-dispatch.sh",
    "format": "biome format --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "1.27.0",
    "typescript": "5.9.3"
  }
}
