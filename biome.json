{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "**/apps/web/src/generated/**",
      "**/node_modules/**",
      "**/node_modules.upstream/**",
      "**/dist/**",
      "**/.git.upstream/**",
      "**/*.upstream",
      "**/*.upstream.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
